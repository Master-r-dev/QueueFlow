{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "lib": ["es2024"],
    "module": "node16",
    "target": "es2024",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "outDir": "./dist",
    "rootDir": "./src"
    //"allowImportingTsExtensions": true,
    //"noEmit": true,
    //"allowArbitraryExtensions": true,
    //"verbatimModuleSyntax": true
  },
  "include": ["src/**/*.ts", "src/*.ts"],
  "exclude": ["node_modules", "dist"]
}
